@model Choosr.Web.ViewModels.QuizDetailViewModel
@{
    ViewData["Title"] = "Quiz Düzenle";
}
<h1 class="hero-title mb-3">Quiz Düzenle</h1>
<div class="glass-box p-4">
  <form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger small mb-2"></div>
    <div class="mb-3">
      <label class="form-label">Başlık</label>
      <input class="form-control form-control-sm" asp-for="Title" />
      <span class="text-danger small" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Açıklama</label>
      <textarea class="form-control form-control-sm" asp-for="Description" rows="3"></textarea>
      <span class="text-danger small" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Kategori</label>
      <input class="form-control form-control-sm" asp-for="Category" />
      <span class="text-danger small" asp-validation-for="Category"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Kapak Görseli URL</label>
      <input class="form-control form-control-sm" asp-for="CoverImageUrl" />
      <span class="text-danger small" asp-validation-for="CoverImageUrl"></span>
      @if(!string.IsNullOrWhiteSpace(Model.CoverImageUrl)){
        <div class="mt-2">
          <img src="@Model.CoverImageUrl" alt="Kapak" style="max-width:320px;border-radius:8px;" />
        </div>
      }
    </div>
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" asp-for="IsPublic" />
      <label class="form-check-label" asp-for="IsPublic">Herkese Açık</label>
    </div>
    <div class="mb-3">
      <label class="form-label">Etiketler (virgüllerle)</label>
      <input class="form-control form-control-sm" name="TagsCsv" value="@string.Join(",", Model.Tags ?? Array.Empty<string>())" />
    </div>
    <div class="d-flex gap-2">
      <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-light btn-sm">İptal</a>
      <button type="submit" class="btn btn-warning btn-sm">Kaydet</button>
    </div>
  </form>
</div>
