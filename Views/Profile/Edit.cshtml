@model Choosr.Domain.Models.UserProfile
@{ViewData["Title"]="Profili Düzenle";}
<div class="profile-layout">
  <aside class="profile-sidebar">
    <div class="profile-card">
  <div class="avatar-lg"><img src="@(Model.AvatarUrl??"/favicon.ico")" alt=""/></div>
      <div class="profile-names">
        <div class="prof-handle">@Model.UserName</div>
      </div>
    </div>
    <div class="profile-stats">
      <div><span>OLUŞTURULAN</span><strong>@Model.CreatedCount</strong></div>
      <div><span>OYUNAN</span><strong>@Model.PlayedCount</strong></div>
      <div><span>YORUM</span><strong>@Model.CommentCount</strong></div>
      <div><span>REAKSİYON</span><strong>@Model.ReactionCount</strong></div>
    </div>
    <nav class="profile-menu">
      <a class="menu-item active" asp-controller="Profile" asp-action="Edit">⚙ Profil Düzenle</a>
      <a class="menu-item" asp-controller="Profile" asp-action="ChangePassword">🔒 Şifre Değiştir</a>
      <form asp-controller="Account" asp-action="Logout" method="post" class="menu-item m-0 p-0">
        <button type="submit" class="menu-item btn-logout">↩ Çıkış</button>
      </form>
    </nav>
  </aside>
  <section class="profile-content">
    <a asp-action="Index" class="back-link">← Geri</a>
    <h1 class="profile-title">Profili Düzenle</h1>
    <p class="profile-sub">Profilinizi düzenleyin</p>
  <form method="post" class="profile-form vstack gap-3" enctype="multipart/form-data">
      <div>
        <label class="form-label">Görünen Ad</label>
        <input name="DisplayName" value="@Model.DisplayName" class="form-control" />
      </div>
      <div>
        <label class="form-label">Kullanıcı Adı</label>
        <input disabled value="@Model.UserName" class="form-control" />
      </div>
      <div>
        <label class="form-label">Biyografi</label>
        <textarea name="Bio" class="form-control" rows="3">@Model.Bio</textarea>
      </div>
    <h5 class="profile-group-title mt-2">Profil Resmi</h5>
    <div class="d-flex align-items-center gap-3 flex-wrap">
  <div class="avatar-lg" id="avatarPreview"><img src="@(Model.AvatarUrl??"/favicon.ico")" alt=""/></div>
      <div class="vstack gap-2" style="min-width:200px;">
        <label class="form-label m-0" style="font-size:.55rem;letter-spacing:.05em;color:var(--c-text-dim);">Düzenle</label>
        <input type="file" name="Avatar" accept="image/*" class="form-control form-control-sm" style="padding:.35rem .55rem;font-size:.6rem;" />
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-sm btn-outline-light avatar-edit-btn" data-avatar-reset style="font-size:.6rem;">Kaldır</button>
        </div>
        <input type="hidden" name="RemoveAvatar" value="false" />
      </div>
    </div>
    <h5 class="profile-group-title mt-3">Sosyal Medya</h5>
      <div class="row g-2">
    <div class="col-md-6"><input name="Twitter" value="@Model.Twitter" placeholder="&#64; Twitter" class="form-control"/>Twitter</div>
    <div class="col-md-6"><input name="Instagram" value="@Model.Instagram" placeholder="&#64; Instagram" class="form-control"/>Instagram</div>
    <div class="col-md-6"><input name="Youtube" value="@Model.Youtube" placeholder="&#64; Youtube" class="form-control"/>Youtube</div>
    <div class="col-md-6"><input name="Kick" value="@Model.Kick" placeholder="&#64; Kick" class="form-control"/>Kick</div>
      </div>
      <div class="mt-3">
        <button class="btn btn-primary auth w-100" type="submit">Kaydet</button>
      </div>
    </form>
  </section>
</div>