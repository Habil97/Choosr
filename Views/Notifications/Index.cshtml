@model List<Choosr.Domain.Entities.Notification>
@{
    ViewData["Title"] = "Bildirimler";
}
<section class="admin-surface">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 mb-0">Bildirimler</h1>
    <form asp-action="MarkAllRead" method="post">
      @Html.AntiForgeryToken()
      <button class="btn btn-sm btn-outline-secondary">Tümünü okundu işaretle</button>
    </form>
  </div>
  @if(!Model.Any()){
    <div class="alert alert-info">Henüz bildiriminiz yok.</div>
  } else {
    <div class="list-group">
      @foreach(var n in Model){
        var isRead = n.ReadAt != null;
        <div class="list-group-item" style="background: @(isRead?"rgba(0,0,0,.08)":"rgba(255,213,74,.08)"); border:1px solid var(--c-border); color:var(--c-text);">
          <div class="d-flex justify-content-between align-items-start gap-2">
            <div>
              <div class="fw-bold">@n.Title</div>
              @if(!string.IsNullOrWhiteSpace(n.Body)){
                <div class="small text-muted">@n.Body</div>
              }
              <div class="small text-muted">@n.CreatedAt.ToLocalTime().ToString("g")</div>
            </div>
            <div class="d-flex align-items-center gap-2">
              @if(!string.IsNullOrWhiteSpace(n.LinkUrl)){
                <a class="btn btn-sm btn-outline-primary" href="@n.LinkUrl">Aç</a>
              }
              @if(!isRead){
                <form asp-action="MarkRead" method="post" class="m-0">
                  @Html.AntiForgeryToken()
                  <input type="hidden" name="id" value="@n.Id" />
                  <button class="btn btn-sm btn-outline-success">Okundu</button>
                </form>
              }
            </div>
          </div>
        </div>
      }
    </div>
  }
</section>
